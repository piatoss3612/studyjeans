version: '3.9'
services:
  bot:
    build:
      context: .
      dockerfile: ./build/bot/Dockerfile
    image: bot
    container_name: bot
    restart: always
    environment:
      - BOT_TOKEN=<YOUR_BOT_TOKEN>

  grafana:
    image: grafana/grafana:main
    container_name: grafana
    environment:
      - GF_SECURITY_ADMIN_USER=admin
      - GF_SECURITY_ADMIN_PASSWORD=admin
    ports:
      - 3000:3000
    restart: always
    volumes:
      - ./configs/grafana/datasources.yml:/etc/grafana/provisioning/datasources/datasources.yml
      - grafana-data:/var/lib/grafana

  loki:
    image: grafana/loki:main
    container_name: loki
    command: -config.file=/etc/loki/config.yml
    restart: always
    volumes:
      - ./configs/loki/config.yml:/etc/loki/config.yml

  promtail:
    image: grafana/promtail:main
    container_name: promtail
    command: -config.file=/etc/promtail/config.yml
    restart: always
    volumes:
      - ./configs/promtail/config.yml:/etc/promtail/config.yml
      - /var/lib/docker/containers:/var/lib/docker/containers

volumes:
  grafana-data:
    driver: local
